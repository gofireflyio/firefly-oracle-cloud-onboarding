# Firefly OCI Integration Configuration
# Copy this file to terraform.tfvars and fill in your values

# OCI Configuration
tenancy_ocid   = "ocid1.tenancy.oc1..example"
compartment_id = "ocid1.compartment.oc1..example"
user_ocid      = "ocid1.user.oc1..example"  # Optional: for user-specific operations
region         = "us-ashburn-1"

# Firefly Configuration
firefly_access_key = "your_firefly_access_key"
firefly_secret_key = "your_firefly_secret_key"

# Resource Naming
prefix = "firefly"
suffix = "prod"

# Tags
tags = {
  Environment = "production"
  Project     = "firefly-integration"
  Owner       = "devops-team"
}

# Service Connector Hub Configuration
target_stream_id = "ocid1.stream.oc1.us-ashburn-1.example"

# Optional: Use existing resources
# existing_log_group_id = "ocid1.loggroup.oc1.us-ashburn-1.example"
# existing_dynamic_group_id = "ocid1.dynamicgroup.oc1..example"
